{% macro boxStyle(slideList, extendPath, title, subTitle) %}
<section class="internationalHome-swiper-base" style="background-color:#0e1a2e;">
    <style>
        .internationalHome-swiper-base {
            background-position: left top;
            height: 398px;
            width: 100%;
            padding-top: 60px;
            box-sizing: border-box;
        }

        .internationalHome-swiper-base .title {
            font-size: 40px;
            margin: 20px auto 0 auto;
            text-align: left;
            width: 1180px;
        }

        .internationalHome-swiper-base .text {
            font-size: 16px;
            text-align: left;
            width: 1180px;
            margin: 0 auto 0 auto;
        }

        .internationalHome-swiper-base .imgBox .img-ul {
            height: 160px;
            margin: 0 auto;
            width: 1180px;
            overflow: hidden;
            margin-top: 48px;
            display: none;
        }

        .internationalHome-swiper-base .imgBox .img-ul li {
            float: left;
            margin-left: 20px;
            margin-bottom: 50px;
            box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.5);
        }

        .internationalHome-swiper-base .imgBox .img-ul li:first-child {
            margin: 0;
        }

        .internationalHome-swiper-base .imgBox .img-ul li:hover {
            border-width: 1px;
            border-style: solid;
        }

        .internationalHome-swiper-base .imgBox .img-ul li:hover img {
            width: 278px;
            height: 138px;
            display: block;
            cursor: pointer;
        }

        .internationalHome-swiper-base .imgBox .img-ul li img {
            width: 280px;
            height: 140px;
            display: block;
            cursor: pointer;
        }

        .internationalHome-swiper-base .imgBox .sNav {
            width: 1135px;
            margin: 0 auto 0 auto;
            text-align: right;
        }

        .internationalHome-swiper-base .imgBox .img-pages {
            display: inline-block;
        }

        .internationalHome-swiper-base .imgBox .img-pages li {
            float: left;
            width: 8px;
            height: 6px;
            margin-right: 10px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .internationalHome-swiper-base .imgBox .img-pages li:last-child {
            margin-right: 0;
        }

        .internationalHome-swiper-base .imgBox .img-pages li .pageBg {
            width: 100%;
            height: 100%;
            background: #fff;
            opacity: 0.3;
            display: block;
        }

        .internationalHome-swiper-base .imgBox .img-pages .active {
            width: 40px;
            position: relative;
        }

        .internationalHome-swiper-base .imgBox .img-pages .active .pageBar {
            display: block;
            height: 6px;
            background: #fff;
            transition: all 0.1s linear;
            position: absolute;
            left: 0;
            top: 0;
        }

        .europe-swiper-base {
            width: 100%;
            height: 500px;
            border-bottom: 1px solid #263043;
            position: relative;
        }

        .europe-swiper-base .banner-box {
            height: 360px;
            width: 100%;
            position: relative;
        }

        .europe-swiper-base .banner-item {
            position: absolute;
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
            background-repeat: no-repeat;
            background-position: top;
        }

        .europe-swiper-base .thumb-nav {
            width: 1280px;
            margin: 0 auto;
            position: relative;
        }

        .europe-swiper-base .thumb-nav .slideBtn {
            cursor: pointer;
            position: absolute;
            top: 28px;
        }

        .europe-swiper-base .thumb-nav .slideBtn:hover {
            opacity: 0.7;
        }

        .europe-swiper-base .thumb-nav .prevBtn {
            left: 0;
        }

        .europe-swiper-base .thumb-nav .nextBtn {
            right: 0;
        }

        .europe-swiper-base .thumb-nav .thumb-box {
            width: 1080px;
            position: relative;
            height: 100px;
            margin: 0 auto;
            overflow: hidden;
        }

        .europe-swiper-base .thumb-nav .thumb-box .thumb-ul {
            position: absolute;
            top: 0;
        }

        .europe-swiper-base .thumb-nav .thumb-box .thumb-item {
            height: 100px;
            float: left;
            width: 270px;
            position: relative;
            cursor: pointer;
        }

        .europe-swiper-base .thumb-nav .thumb-box .thumb-item p {
            padding: 40px 20px 20px;
            font-size: 14px;
            color: #edf4f8;
        }

        .europe-swiper-base .thumb-nav .thumb-box .thumb-item .pageBg {
            width: 100%;
            height: 2px;
            position: absolute;
            bottom: 0;
            left: 0;
            opacity: 0.3;
            display: block;
        }

        .europe-swiper-base .thumb-nav .thumb-box .active {
            background: #263043;
        }

        .europe-swiper-base .thumb-nav .thumb-box .active .pageBg {
            background: #edf4f8;
        }

        .europe-swiper-base .thumb-nav .thumb-box .active .pageBar {
            display: block;
            height: 2px;
            background: #fff;
            transition: all 0.1s linear;
            position: absolute;
            left: 0;
            bottom: 0;
        }
    </style>
    <!-- 解释文案 -->
    <div class="text">{{subTitle}}</div>
    <!-- title -->
    <div class="title b-8-cl">{{title}}</div>
    <!-- 图片区域 -->
    <div class="imgBox">
        <!-- 图片 -->
        {% for li in slideList %}
        {% if loop.index0 !== 0 %}
        <ul class="img-ul clearfix" data-id="{{loop.index}}" style="display: none">
            {% for item in li %}
            <li class="u-8-bd">
                <a href="{{ item.httpUrl }}">
                    <img src="{{item.imageUrl}}"/>
                </a>
            </li>
            {% endfor %}
        </ul>
        {% else %}
        <ul class="img-ul clearfix" data-id="{{loop.index}}" style="display: block">
            {% for item in li %}
            <li class="u-8-bd">
                <a href="{{ item.httpUrl }}">
                    <img src="{{item.imageUrl}}"/>
                </a>
            </li>
            {% endfor %}
        </ul>
        {% endif %}
        {% endfor %}
        <!-- 锚点 -->
        <div class="sNav">
            {% if slideList.length > 1 %}
            <ul class="img-pages clearfix">

            </ul>
            {% endif %}
        </div>
    </div>
    <script>
        (() => {
            const {getScript} = window.BlockChainUtils;
            const extendPath = "{{extendPath}}";
            if (extendPath && !window.InternationSwiperExtend){
                getScript(`${window.staticDomain}/home/static/${extendPath}`).then(() => {
                    class InternationSwiper extends window.InternationSwiperExtend{
                        constructor() {
                            super();
                            this.indexInternationalOpen = "{{switch.index_international_open}}";
                            this.internationalHomeWwiperBase = document.querySelector('.internationalHome-swiper-base');
                            this.imgListContainer = this.internationalHomeWwiperBase.querySelector('.imgBox');
                            this.imgList = this.imgListContainer.querySelectorAll('li');
                            this.imgPages = this.internationalHomeWwiperBase.querySelector('.img-pages');
                            this.imgBox = this.imgListContainer.querySelectorAll('.img-ul');
                            this.navList = [];
                            this.imgPagesMap = {};
                            this.pageTime = 0;
                            this.swiperTime = 10000;
                            this.bannerCounter = 4;
                            this.page = 0;
                            this.timer = null;
                            this.thumbPage = 0; // 缩略图当前页数
                            this.thumbPage_2 = 0;
                            this.thumbItemWidth = '270';
                            this.thumbLeft = 0;
                            this.init();
                        }
                    }
                    new InternationSwiper();
                });
            }
        })();
    </script>
</section>
{% endmacro %}
