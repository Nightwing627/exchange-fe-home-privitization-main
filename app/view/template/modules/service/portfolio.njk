<div class="service">

  <style>
    .service {
      background-color: #F7F7F7;
      padding-right: 170px;
      padding-left: 100px;
      padding-bottom: 100px;
    }
    .service .title {
      font-size: 40px;
      color: #16161F;
      text-align: center;
      margin-bottom: 30px;
      padding-top: 70px;
    }
    .service .title span {
      font-weight: 600;
    }
    .service .sub-title {
      font-size: 18px;
      color: #16161F;
      text-align: center;
    }
    .service .description {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 50px;
    }
    .service .description .description-img {
      width: calc(100% - 419px);
      height: 404px;
      position: relative;
    }
    .service .description .description-img img {
      position: absolute;
    }
    .service .description .description-img img:nth-child(1) {
      height: 120%;
      top: -10%;
      z-index: 999;
    }
    .service .description .description-img img:nth-child(2) {
      height: 100%;
      left: 10%;
    }
    .service .description .description-list {
      width: 342px;
      margin-left: 77px;
    }
    .service .description .description-list .description-item {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 50px;
    }
    .service .description .description-list .description-item:last-child {
      margin-bottom: 0;
    }
    .service .description .description-item img {
      width: 38px;
      height: 45px;
      margin-right: 45px;
    }
    .service .description .description-item .detail {
      width: 254px;
    }
    .service .description .description-item .detail .label {
      font-size: 16px;
      font-weight: 600;
      color: #16161F;
      line-height: 18px;
      margin-bottom: 5px;
    }
    .service .description .description-item .detail .tip {
      font-size: 14px;
      line-height: 18px;
      color: #16161F;
    }
  </style>

  <p class="title">
    {{locale.home.title1}}<span>{{locale.home.portfolio}}</span>
  </p>
  <p class="sub-title">
    {{locale.home.subTitle1}}
  </p>
  <div class="description">
    <div class="description-img">
      <img src="{{sourceMap.iPhone_11_Pro_4}}" alt="" />
      <img src="{{sourceMap.MacBook_Pro_1}}" alt="" />
    </div>
    <ul class="description-list">
      <li class="description-item">
        <img src="{{sourceMap.Lightning}}" alt="" />
        <div class="detail">
          <p class="label">
            {{locale.home.title2}}
          </p>
          <p class="tip">
            {{locale.home.subTitle2}}
          </p>
        </div>
      </li>
      <li class="description-item">
        <img src="{{sourceMap.TradingPpanel}}" alt="" />
        <div class="detail">
          <p class="label">
            {{locale.home.title3}}
          </p>
          <p class="tip">
            {{locale.home.subTitle3}}
          </p>
        </div>
      </li>
      <li class="description-item">
        <img src="{{sourceMap.transfers}}" alt="" />
        <div class="detail">
          <p class="label">
            {{locale.home.title4}}
          </p>
          <p class="tip">
            {{locale.home.subTitle4}}
          </p>
        </div>
      </li>
      <li class="description-item">
        <img src="{{sourceMap.User}}" alt="" />
        <div class="detail">
          <p class="label">
            {{locale.home.title5}}
          </p>
          <p class="tip">
            {{locale.home.subTitle5}}
          </p>
        </div>
      </li>
    </ul>
  </div>

  <script></script>
</div>