<section class="lxgHome">
    <style>
        .lxgHome {
            min-width: 1200px;
            background: #fff;
        }
        .lxgHome .bulletinBoard {
            border-bottom-width: 1px;
            border-bottom-style: solid;
            border-color: #263043;
            background: #070f15;
            width: 100%;
            height: 38px;
            text-align: center;
            position: relative;
        }
        .lxgHome .bulletinBoard .backgrounds {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
        }
        .lxgHome .bulletinBoard .bull-bar .notice-item {
            font-family: PingFangSC-Regular;
            font-size: 12px;
            text-align: center;
            position: relative;
            display: inline-block;
            box-sizing: border-box;
            line-height: 38px;
            height: 38px;
        }
        .lxgHome .bulletinBoard .bull-bar .notice-item a {
            display: inline-block;
            line-height: 20px;
            color: #828ea1;
            padding: 0 10px;
            line-height: 38px;
        }
        .lxgHome .bulletinBoard .bull-bar .notice-item .hoverShow {
            display: none;
        }
        .lxgHome .bulletinBoard .bull-bar .notice-item .hoverHide {
            display: inline-block;
        }
        .lxgHome .bulletinBoard .bull-bar .notice-item i {
            margin-left: 20px;
            display: inline-block;
        }
        .lxgHome .bulletinBoard .bull-bar .notice-item:last-child i {
            display: none;
        }
        .lxgHome .bulletinBoard .bull-bar .notice-item:hover .hoverShow {
            display: inline-block;
        }
        .lxgHome .bulletinBoard .bull-bar .notice-item:hover .hoverHide {
            display: none;
        }
        .lxgHome .bulletinBoard .bull-bar .notice-item .new {
            font-size: 9px;
            line-height: 18px;
            display: inline-block;
            margin-right: 20px;
            width: 32px;
            height: 16px;
            display: inline-block;
        }
        .lxgHome .bulletinBoard .bull-bar .notice-item .new img {
            width: 100%;
            vertical-align: middle;
            height: 100%;
        }
        .lxgHome .bulletinBoard .bull-bar .moreButton {
            display: inline-block;
            height: 11px;
            width: 19px;
            vertical-align: middle;
            position: relative;
            margin-left: 20px;
            cursor: pointer;
        }
        .lxgHome .bulletinBoard .bull-bar .moreButton img {
            width: 100%;
            height: 100%;
        }
        .lxgHome .bulletinBoard .bull-bar .moreButton b {
            top: 0;
            left: 0;
            position: absolute;
            display: inline-block;
            height: 10px;
            width: 17px;
        }
        .lxgHome .bulletinBoard .bull-bar .moreButton .hover-show {
            display: none;
        }
        .lxgHome .bulletinBoard .bull-bar .moreButton:hover .hover-hide {
            display: none;
        }
        .lxgHome .bulletinBoard .bull-bar .moreButton:hover .hover-show {
            display: block;
        }
        .lxgHome .bulletinBoard .more {
            position: absolute;
            font-family: PingFangSC-Regular;
            font-size: 12px;
            text-align: right;
            right: 20px;
            top: 7px;
        }
        .lxgHome .product-re {
            background-position: center top;
            height: 419px;
            padding-top: 1px;
            width: 100%;
        }
        .lxgHome .product-re .title {
            font-size: 40px;
            color: #31363e;
            text-align: center;
            margin-top: 87px;
            font-weight: bold;
        }
        .lxgHome .product-re .maker {
            font-size: 16px;
            color: #828ea1;
            text-align: center;
            line-height: 16px;
            margin-top: 18px;
        }
        .lxgHome .product-re .register {
            width: 490px;
            margin: 60px auto 0;
        }
        .lxgHome .product-re .register-infos {
            background: #fff;
            border-radius: 2px;
            height: 50px !important;
            width: 360px !important;
            color: #aaa;
            line-height: 50px !important;
            border: none;
            float: left;
        }
        .lxgHome .product-re .input-find-content input {
            color: #31363e !important;
            font-size: 16px !important;
            height: 50px !important;
            line-height: 50px !important;
            text-indent: 20px;
            width: 100%;
        }
        .lxgHome .product-re .go-register-btn {
            background: #3f78ff;
            border-radius: 2px;
            height: 50px;
            width: 120px;
            line-height: 50px;
            text-align: center;
            float: left;
            font-size: 16px;
            color: #fff;
            margin-left: 10px;
        }
        .lxgHome .product-re .go-register-btn:hover {
            box-shadow: 0 4px 12px 0 rgba(0,0,0,0.1);
            background: #5b8cff;
        }
    </style>
    {% import "./swiper/king.njk" as swiper %}
    {{ swiper.boxStyle(
    slideList=helper.swiper.getInterMap(cmsAdvertList),
    bigSlide=cmsAdvertList,
    extendPath =sourceMap.interSwiperExtend,
    title=internationalTitle.title,
    subTitle=internationalTitle.subTitle,
    locale=locale,
    helper=helper,
    link="https://otc.lxg.tw"
    )}}
    {% include "./noticeInfo/lxg.njk" %}
    {% include "./market/lxg.njk" %}
    {{ footer_warm_prompt | safe }}
    <script></script>
</section>
